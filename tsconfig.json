{
  "include": ["./src", "./src/types"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react",
    "esModuleInterop": true
  }
}
